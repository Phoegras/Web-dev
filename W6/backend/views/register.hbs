<!DOCTYPE html>
<html lang="en" class="light scroll-smooth" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title>Register - Techwind</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="User registration form">
    <link rel="shortcut icon" href="/images/favicon.ico">

    <!-- CSS Libraries -->
    <link href="/libs/@iconscout/unicons/css/line.css" type="text/css" rel="stylesheet">
    <link href="/libs/@mdi/font/css/materialdesignicons.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/stylesheets/tailwind.min.css">
</head>
<body class="font-nunito text-base text-black dark:text-white dark:bg-slate-900">
    <!-- Registration Section -->
    <section class="md:h-screen py-36 flex items-center bg-gray-100 dark:bg-slate-900">
        <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black"></div>
        <div class="container relative">
            <div class="flex justify-center">
                <div class="max-w-[400px] w-full m-auto p-6 bg-white dark:bg-slate-800 shadow-md rounded-md">
                    <a href="/"><img src="/images/logo-icon-64.png" class="mx-auto mb-4" alt="Logo"></a>
                    <h5 class="text-xl font-semibold text-center mb-6">Sign Up</h5>
                    <form action="/users/register" method="POST" class="text-start">
                        <div class="grid gap-4">
                            <div>
                                <label class="font-semibold" for="name">Your Name:</label>
                                <input id="name" name="name" type="text" required class="form-input mt-2 w-full py-2 px-3 bg-gray-50 border rounded focus:border-indigo-500" placeholder="Your Name">
                            </div>
                            <div>
                                <label class="font-semibold" for="email">Email Address:</label>
                                <input id="email" name="email" type="email" required class="form-input mt-2 w-full py-2 px-3 bg-gray-50 border rounded focus:border-indigo-500" placeholder="name@example.com">
                            </div>
                            <div>
                                <label class="font-semibold" for="password">Password:</label>
                                <input id="password" name="password" type="password" required class="form-input mt-2 w-full py-2 px-3 bg-gray-50 border rounded focus:border-indigo-500" placeholder="Password">
                            </div>
                            <div class="flex items-center">
                                <input type="checkbox" id="terms" class="form-checkbox text-indigo-600 border-gray-300 focus:ring-indigo-500">
                                <label for="terms" class="ml-2 text-gray-600">I accept the <a href="#" class="text-indigo-600">Terms and Conditions</a></label>
                            </div>
                            <button type="submit" class="w-full py-2 mt-4 bg-indigo-600 text-white rounded hover:bg-indigo-700">Register</button>
                        </div>
                    </form>
                    <p class="text-center text-gray-500 mt-4">Already have an account? <a href="/auth/login" class="text-indigo-600">Sign in</a></p>
                </div>
            </div>
        </div>
    </section>

    <!-- JavaScript Libraries -->
    <script src="/libs/feather-icons/feather.min.js"></script>
    <script src="/js/plugins.init.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>