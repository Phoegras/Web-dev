<main>
  <div class="mx-auto max-w-screen-lg p-6">
    <!-- Breadcrumb -->
    <div class="mb-8 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
      <h1 class="text-3xl font-extrabold text-black dark:text-white">
        User Details
      </h1>
      <nav>
        <ol class="flex items-center gap-2 text-gray-500 dark:text-gray-400">
          <li>
            <a href="/accounts" class="hover:text-primary">Accounts</a> /
          </li>
          <li class="text-primary font-semibold">{{userProfile.name}}</li>
        </ol>
      </nav>
    </div>
    <!-- Breadcrumb End -->

    <!-- User Card -->
    <div
      class="bg-white dark:bg-boxdark shadow-lg rounded-lg overflow-hidden flex flex-col md:flex-row gap-6 p-6"
    >
      <!-- Avatar Section -->
      <div class="flex-shrink-0">
        <img
          src="{{user.avatar}}"
          alt="{{userProfile.name}}'s avatar"
          class="w-32 h-32 md:w-40 md:h-40 rounded-full mx-auto md:mx-0"
        />
      </div>

      <!-- Info Section -->
      <div class="flex-1">
        <h2 class="text-2xl font-bold text-black dark:text-white">
          {{userProfile.name}}
        </h2>
        <p class="text-gray-500 dark:text-gray-400">{{user.email}}</p>
        <div class="mt-4">
          <span class="inline-block rounded-full px-4 py-2 text-sm font-semibold text-white {{#if (eq user.status 'ACTIVE')}}bg-success{{else}}bg-danger{{/if}}">
            {{user.status}}
          </span>
        </div>

        <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <h4 class="text-sm font-bold text-gray-500 dark:text-gray-400 uppercase">
              Registration Time
            </h4>
            <p class="text-base text-black dark:text-white">
              {{user.emailVerifiedAt}}
            </p>
          </div>
          <div>
            <h4 class="text-sm font-bold text-gray-500 dark:text-gray-400 uppercase">
              Role
            </h4>
            <p class="text-base text-black dark:text-white">
              {{user.role}}
            </p>
          </div>
        </div>
      </div>
    </div>
    <!-- User Card End -->

    <!-- Actions -->
    <div class="mt-8 flex justify-between items-center">
      <a
        href="/accounts/user"
        class="text-sm font-medium text-primary hover:underline flex items-center gap-2"
      >
        <i class="ri-arrow-left-line"></i> Back to Accounts
      </a>
      {{#if (eq user.status 'ACTIVE')}}
      <button
        class="px-6 py-2 text-sm font-medium text-white bg-danger rounded-md hover:bg-opacity-90"
        onclick="handleBan('{{user.id}}')"
      >
        Ban User
      </button>
      {{else}}
      <button
        class="px-6 py-2 text-sm font-medium text-white bg-success rounded-md hover:bg-opacity-90"
        onclick="handleUnban('{{user.id}}')"
      >
        Unban User
      </button>
      {{/if}}
    </div>
  </div>
</main>
