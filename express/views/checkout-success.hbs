<!-- Start -->
<section class="relative md:py-24 py-16">
    <div class="container">
        <div class="grid lg:grid-cols-12 md:grid-cols-2 grid-cols-1 gap-[30px]">
            <div class="lg:col-span-7">
                <div class="p-6 rounded-md shadow dark:shadow-gray-800">
                    <h3 class="text-xl leading-normal font-semibold text-center text-green-600">Thank You for Your Order!</h3>
                    <p class="text-sm text-slate-400 text-center mt-4">
                        Your order has been placed successfully. Below are the details of your order. You will also receive an email confirmation shortly.
                    </p>

                    <div class="mt-6">
                        <h4 class="text-lg font-semibold">Order Summary</h4>
                        <div class="mt-4">
                            <p class="text-slate-600 dark:text-slate-300"><span class="font-bold">Order ID:</span> {{order.id}}</p>
                            <p class="text-slate-600 dark:text-slate-300"><span class="font-bold">Order Date:</span> {{formatDate order.createdAt "dd/MM/yy"}}</p>
                            <p class="text-slate-600 dark:text-slate-300"><span class="font-bold">Recipient:</span> {{order.recipient}}</p>
                            <p class="text-slate-600 dark:text-slate-300"><span class="font-bold">Shipping Address:</span> {{order.address}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <!--end col-->

            <div class="lg:col-span-5">
                <div class="p-6 rounded-md shadow dark:shadow-gray-800">
                    <h4 class="text-lg font-semibold">Your Items</h4>
                    <div class="mt-4 rounded-md shadow dark:shadow-gray-800">
                        {{#each order.orderItem}}
                        <div class="p-3 flex justify-between items-center border border-gray-100 dark:border-gray-800">
                            <div class="flex items-center">
                                <img src="{{this.product.images.[0]}}" class="rounded shadow dark:shadow-gray-800 w-12" alt="{{this.product.name}}">
                                <div class="ml-3">
                                    <h5 class="font-semibold">{{this.product.name}}</h5>
                                    <p class="text-sm text-slate-400">Size: {{this.size}}</p>
                                </div>
                            </div>
                            <span class="bg-indigo-600 flex justify-center items-center text-white text-[10px] font-bold px-2.5 py-0.5 rounded-full h-5">x{{this.quantity}}</span>
                            <p class="text-slate-400 font-semibold">$ {{this.product.price}}</p>
                        </div>
                        {{/each}}

                        <div class="p-3 flex justify-between items-center border border-gray-100 dark:border-gray-800">
                            <h5 class="font-semibold">Total (USD)</h5>
                            <p class="font-semibold">$ {{order.totalAmount}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end grid-->
    </div>
    <!--end container-->

    <div class="container mt-6 text-center">
        <a href="/" class="py-2 px-5 inline-block tracking-wide border align-middle duration-500 text-base text-center bg-indigo-600 hover:bg-indigo-700 border-indigo-600 hover:border-indigo-700 text-white rounded-md">
            Continue Shopping
        </a>
    </div>
</section>
<!--end section-->

<script>
    if({{success}}) {
        localStorage.removeItem('cartList');
    }
</script>