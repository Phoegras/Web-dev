<section class="relative table w-full py-20 lg:py-24 bg-gray-50 dark:bg-slate-800">
    <div class="container flex justify-center items-center min-h-screen">
        <div class="w-full max-w-lg p-8 bg-white dark:bg-slate-900 rounded-lg shadow-md dark:shadow-gray-700">
            <div class="text-center">
                <!-- Icon and Status -->
                <div class="flex justify-center items-center mb-6">
                    <div class="w-16 h-16 {{#if (eq code "00")}}bg-green-100{{else}}bg-red-100{{/if}} rounded-full flex justify-center items-center {{#if (eq code "00")}}text-green-600{{else}}text-red-600{{/if}}">
                        <i class="{{#if (eq code "00")}}uil uil-check-circle{{else}}uil uil-times-circle{{/if}} text-4xl"></i>
                    </div>
                </div>

                <!-- Status Message -->
                <h2 class="text-2xl font-semibold text-gray-800 dark:text-white">
                    {{#if (eq code "00")}}Payment Successful!{{else}}Payment Failed{{/if}}
                </h2>

                <!-- Description -->
                <p class="text-gray-600 dark:text-gray-400 mt-4">
                    {{#if (eq code "00")}}
                        Your payment was processed successfully. Thank you for your purchase!
                    {{else}}
                        We encountered an issue while processing your payment. Please try again or contact support.
                    {{/if}}
                </p>

                <!-- Important Info -->
                {{#if (eq code "00")}}
                <div class="mt-6 bg-gray-100 dark:bg-slate-800 p-4 rounded-md text-left">
                    <p class="text-sm text-gray-700 dark:text-gray-300">
                        <span class="font-bold">Transaction ID:</span> {{transactionId}}
                    </p>
                    <p class="text-sm text-gray-700 dark:text-gray-300 mt-2">
                        <span class="font-bold">Transaction Time:</span> {{transactionTime}}
                    </p>
                    <p class="text-sm text-gray-700 dark:text-gray-300 mt-2">
                        <span class="font-bold">Amount Paid:</span> ${{amountPaid}}
                    </p>
                    <p class="text-sm text-gray-700 dark:text-gray-300 mt-2">
                        <span class="font-bold">Bank:</span> {{bankCode}}
                    </p>
                </div>
                {{/if}}

                <!-- Action Button -->
                <div class="mt-8">
                    <a href="/" class="py-3 px-6 inline-block text-white bg-indigo-600 hover:bg-indigo-700 font-semibold rounded-md shadow-md">
                        {{#if (eq code "00")}}Continue Shopping{{else}}Try Again{{/if}}
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
