<section
    class="md:h-screen py-36 flex items-center bg-[url('/images/errr.png')] bg-no-repeat bg-center bg-cover"
>
    <div
        class='absolute inset-0 bg-gradient-to-b from-transparent to-black'
    ></div>
    <div class='container relative'>
        <div class='flex justify-center'>
            <div
                class='max-w-[400px] w-full m-auto p-6 bg-white dark:bg-slate-900 shadow-md dark:shadow-gray-800 rounded-md text-center'
            >
                <a href='/'><img
                        src='/images/logo-icon-64.png'
                        class='mx-auto mb-4'
                        alt='Logo'
                    /></a>
                <h5 class='text-xl font-semibold mb-4 text-red-600'>Error</h5>
                <p
                    id="error-message"
                    class="text-red-600 p-4 border border-red-300 rounded-md bg-red-100 dark:bg-red-800 dark:border-red-700 dark:text-red-300"
                >
                    <!-- Dynamic error message -->
                    <span id="dynamicErrorMessage">An unexpected error occurred. Please try again later.</span>
                </p>

                <div class='mt-6'>
                    <a
                        href='/'
                        class='py-2 px-5 inline-block tracking-wide border align-middle duration-500 text-base text-center bg-indigo-600 hover:bg-indigo-700 border-indigo-600 hover:border-indigo-700 text-white rounded-md'
                    >Go Home</a>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const params = new URLSearchParams(window.location.search);
    const message = params.get('message');
    if (message) {
        document.getElementById('dynamicErrorMessage').textContent = message;
    }
</script>